<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="1dp"
    android:background="@drawable/deskripsi">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/foodImage"
        android:layout_width="128dp"
        android:layout_height="120dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profilpotik"
        app:siShape="@drawable/image_corner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="120dp"
        android:gravity="left"
        android:orientation="vertical">

        <apotikku.hummasoft.com.apotikku.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/propertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="One Mei Farma"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />


        <apotikku.hummasoft.com.apotikku.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/street1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Jl. Ahmad Yani No.60, Krajan, Umbulsari, Kabupaten Jember 68166"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <apotikku.hummasoft.com.apotikku.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/street2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="Provinsi : Jawa Timur"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </LinearLayout>
    </LinearLayout>