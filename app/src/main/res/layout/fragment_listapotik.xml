<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".list_apotik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="0dp"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3498db"
            android:paddingTop="2dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="waktu sholat"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:id="@+id/laykiri"
                android:layout_weight="1">
                <apotikku.hummasoft.com.apotikku.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragsholat"
                    android:layout_marginTop="7dp"
                    android:text="Terdekat"
                    android:textColor="#3498db"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:text="masjid Terdekat"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/laykanan"
                android:textSize="16dp"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <apotikku.hummasoft.com.apotikku.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmasjid"
                    android:text="MenerimaCekKesehatan"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#fff" />

        <FrameLayout
            android:id="@+id/framedatamasjid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>